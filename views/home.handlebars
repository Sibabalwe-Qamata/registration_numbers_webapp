  <div class="container">
    <div class="row">
      <div class="twelve columns"> 
        <h1>Registration Numberplates</h1>
      </div>
    </div>

    <div class="row entry">
        <div class="twelve columns">
           <h1>{{messages.info}}</h1>
        </div>
    </div>

    <div class="row">
        <div class="twelve columns">
          {{!-- pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" --}}
            <div class="twelve columns">
              <form action="/reg_numbers" method="post">
              <input name="regValue" id="numberPlate" maxlength="10" onkeyup="lettersOnly(this)" placeholder="enter registration number" class="regNumber"   title="Please enter a Number Plate e.g 'CA31004'"/>
               <input type="submit" value="Add"> 
              </form>
            </div>
       
        </div>
    </div>

    <div class="row">
          <div class="twelve columns">
            
                <div class="normalFilter">
                    <select class="selectWhichTown" onclick="filterTown()" name="selectTown">
                      <option class="selectWhichTown"  value="All">All Towns</option>
                      {{#each drop_down}}
                      <option class="selectWhichTowns" {{selectTowns}} value="{{location_indicator}}">{{town}}</option>
                        {{/each}}
                    </select>
                  </div>
          </div>
    </div>


    <div class="row">

      <div class="twelve columns">

           <ul class="registrationNum">
            {{#each displayRegs}}
                    <li>{{reg_number}}</li>
             {{/each}} 
            </ul>
      </div>
    </div>

    <div class="row">
      <div class="twelve columns">
          <a href="/reset">
              <button class="button reset">Reset</button>
          </a>
      </div>
    </div>

  </div>

  <script>
    function filterTown (){
      var selectedTown = document.querySelector(".selectWhichTown");

      location.href = "/filter/"+selectedTown.value;
    }
  </script>